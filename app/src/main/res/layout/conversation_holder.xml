<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingLeft="15dp"
    android:clipToPadding="false"
    android:background="@drawable/conversation_holder">

    <View
        android:id="@+id/avatar"
        android:layout_alignParentLeft="true"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"
        android:background="@mipmap/ic_lprofile_img"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/avatar"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/avatar"
        android:text="Sharon Muye"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/message_body"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/name"
        android:layout_alignLeft="@+id/name"
        android:layout_marginLeft="-15dp"
        android:layout_marginTop="7dp"
        android:elevation="2dp"
        android:textStyle="italic"
        android:fontFamily="casual"
        android:textColor="#b5000000"
        android:paddingHorizontal="16dp"
        android:text="How are you doing? This is a long message that should probably wrap."
        android:textSize="16sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_done_all"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"/>

</RelativeLayout>